{
  "name": "boilerplate-app",
  "version": "0.0.0",
  "scripts": {
    "build": "next build",
    "dev": "open http://localhost:3100 && next dev --port 3100",
    "lint": "eslint --max-warnings 0 .",
    "lint-fix": "eslint --fix .",
    "tsc": "tsc -p tsconfig.json",
    "format-fix": "prettier --config ../../.prettierrc --write --ignore-unknown -l .",
    "test": "jest --verbose",
    "test-watch": "jest --verbose --watch",
    "test-coverage": "jest --coverage --verbose",
    "storybook": "storybook dev -p 6100 --quiet",
    "storybook-build": "storybook build -o build-storybook-static",
    "update-dependencies": "npx npm-check-updates -u"
  },
  "dependencies": {
    "config-tailwind": "*",
    "next": "14.1.0",
    "react-parallax-tilt": "1.7.191",
    "trpc-api-boilerplate": "1.0.36",
    "ui-tailwind": "*",
    "utils-version": "*"
  },
  "devDependencies": {
    "config-storybook": "*",
    "config-tsconfig": "*",
    "utils-test": "*"
  }
}
