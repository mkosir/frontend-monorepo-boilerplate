{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "noEmit": true,
    "outDir": "compiled",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "target": "ES6",
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules"],
  // Storybook
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
